<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perfil_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ProgressBar
        android:id="@+id/perfil_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photoperfil"
        android:src="@mipmap/img_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="" />

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">



    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_user"
        android:inputType="textPersonName"
        android:id="@+id/name_perfil"
        android:layout_below="@+id/photoperfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/surname"
        android:inputType="textPersonName"
        android:id="@+id/surname"
        android:layout_below="@+id/name_perfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/s_surname"
        android:inputType="textPersonName"
        android:id="@+id/s_surname"
        android:layout_below="@+id/surname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:id="@+id/password"
        android:layout_below="@+id/s_surname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </android.support.design.widget.TextInputLayout>

   <!-- <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnPass"
        android:id="@+id/btnPass"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:layout_below="@+id/mail_perfil"
        android:background="@android:color/white"/> -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGuardar"
            android:id="@+id/Update_Perfil"
            android:background="@android:color/holo_green_light"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:onClick=""/>

    </LinearLayout>
</RelativeLayout>